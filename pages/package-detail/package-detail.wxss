/* package-detail.wxss */
page {
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF8C42;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 主容器 */
.package-container {
  padding-bottom: 40rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-indicator {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  z-index: 1;
}

/* 套餐标题和价格 */
.package-header {
  padding: 30rpx 30rpx 20rpx;
  background-color: #ffffff;
}

.package-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.package-price-container {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 30rpx;
  color: #FF8C42;
  font-weight: bold;
}

.package-price {
  font-size: 48rpx;
  color: #FF8C42;
  font-weight: bold;
}

.price-unit {
  font-size: 26rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 套餐描述 */
.package-description {
  padding: 20rpx 30rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  background-color: #ffffff;
}

/* 租期选择器 */
.rental-options {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.rental-option {
  width: 22%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.rental-option.selected {
  border-color: #FF8C42;
  background-color: #FFF0E6;
}

.rental-name {
  font-size: 28rpx;
  color: #333;
}

.rental-discount {
  font-size: 20rpx;
  color: #fff;
  background-color: #FF8C42;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  position: absolute;
  top: 0;
  right: 0;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #eee;
  width: 240rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  font-size: 36rpx;
  color: #333;
}

.quantity-btn.disabled {
  color: #ccc;
}

.quantity-value {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-left: 2rpx solid #eee;
  border-right: 2rpx solid #eee;
  font-size: 32rpx;
}

/* 日期选择器 */
.date-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

.date-value {
  font-size: 28rpx;
  color: #333;
}

.date-icon {
  font-size: 24rpx;
  color: #999;
}

/* 价格计算器 */
.price-calculator {
  margin-bottom: 20rpx;
}

.price-details {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-value.original {
  color: #999;
  text-decoration: line-through;
}

.price-row.total {
  padding-top: 16rpx;
  border-top: 2rpx solid #eee;
}

.price-value.highlight {
  font-size: 36rpx;
  color: #FF8C42;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.book-button {
  flex: 2;
  background-color: #FF8C42;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: normal;
  margin-right: 15rpx;
  border: none;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.contact-button, .share-button {
  flex: 1;
  background-color: #ffffff;
  color: #333;
  font-size: 28rpx;
  font-weight: normal;
  border: 2rpx solid #ddd;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.contact-button {
  margin-right: 15rpx;
}

/* 分段区域 */
.section {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #FF8C42;
}

/* 特色区域 */
.features-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.feature-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.feature-icon {
  font-size: 48rpx;
  color: #FF8C42;
  margin-bottom: 15rpx;
}

.feature-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 家具和配件列表 */
.item-list {
  border-left: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-quantity {
  font-size: 28rpx;
  color: #666;
}

/* 常见问题 */
.faq-list {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.faq-item {
  border-bottom: 1rpx solid #eee;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.faq-arrow {
  font-size: 24rpx;
  color: #999;
}

.faq-answer {
  padding: 20rpx 30rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.faq-answer.hidden {
  display: none;
}

/* 用户评价 */
.reviews-list {
  padding: 20rpx 0;
}

.review-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.rating {
  margin-bottom: 15rpx;
}

.star-filled {
  color: #FFCB45;
  margin-right: 4rpx;
}

.star-empty {
  color: #ddd;
  margin-right: 4rpx;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 弹出日期选择器 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.date-picker-container {
  width: 90%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.date-picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-picker-close {
  font-size: 28rpx;
  color: #999;
}

.date-picker {
  width: 100%;
  padding: 30rpx;
}

.picker-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.selected-date {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.picker-hint {
  font-size: 24rpx;
  color: #999;
}

.confirm-date-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #FF8C42;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 30rpx auto;
}

/* 客服和分享模态框 */
.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.contact-icon {
  font-size: 48rpx;
  color: #FF8C42;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.contact-value {
  font-size: 32rpx;
  color: #333;
}

.copy-hint {
  font-size: 24rpx;
  color: #FF8C42;
}

.contact-divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 10rpx 0;
}

/* 分享选项 */
.share-modal .modal-body {
  padding-bottom: 50rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  line-height: 1.5;
  padding: 0;
  width: 150rpx;
}

.share-option::after {
  display: none;
}

.share-icon {
  font-size: 80rpx;
  color: #FF8C42;
  margin-bottom: 15rpx;
}

.share-text {
  font-size: 28rpx;
  color: #333;
} 