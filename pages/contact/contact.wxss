/* 页面样式 */
page {
  padding-bottom: 60rpx;
}

/* 企业介绍卡片 */
.about-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.company-subtitle {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.company-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  background-color: #FFF0E6;
  color: #FF8C42;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.company-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 30rpx;
}

/* 分节标题 */
.section {
  margin: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title:before {
  content: "";
  position: absolute;
  left: 0;
  top: 8rpx;
  bottom: 8rpx;
  width: 8rpx;
  background-color: #FF8C42;
  border-radius: 4rpx;
}

/* 微信联系卡片 */
.wechat-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.wechat-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  background-color: #f6f6f6;
  margin: 0 auto 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  position: relative;
}

.qr-code .iconfont {
  font-size: 100rpx;
  color: #07C160;
}

.qr-overlay {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.wechat-id {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.wechat-time {
  font-size: 24rpx;
  color: #999;
}

/* 联系项目样式 */
.contact-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #FFF0E6;
  color: #FF8C42;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.contact-icon .iconfont {
  font-size: 40rpx;
}

.contact-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.contact-value {
  font-size: 24rpx;
  color: #888;
}

/* 表单样式 */
.form-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-select {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  position: relative;
  box-sizing: border-box;
  color: #333;
}

.form-textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  height: 160rpx;
  box-sizing: border-box;
}

.submit-button {
  background-color: #FF8C42;
  color: white;
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 140, 66, 0.3);
  margin-top: 20rpx;
}

/* 用户评价样式 */
.review-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.review-header {
  display: flex;
  margin-bottom: 20rpx;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.review-time {
  font-size: 22rpx;
  color: #999;
}

.rating {
  margin: 10rpx 0;
}

.rating .iconfont {
  margin-right: 4rpx;
  font-size: 28rpx;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.contact-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 6rpx;
  background-color: #FF8C42;
  border-radius: 3rpx;
}

/* 联系方式卡片 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #FFF0E6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.contact-icon .iconfont {
  color: #FF8C42;
  font-size: 36rpx;
}

.contact-detail {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 地图样式 */
.location-map {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-error {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FF8C42;
  color: #fff;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 140, 66, 0.3);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 560rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.success-icon {
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.modal-button {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF8C42;
  color: #fff;
  border-radius: 40rpx;
  margin: 0 auto;
  font-weight: bold;
} 