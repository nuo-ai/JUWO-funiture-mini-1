/**app.wxss**/
@import "./static/styles/iconfont.wxss";

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  background-color: #f8f8f8;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 清除按钮默认样式 */
button {
  background: none;
  padding: 0;
  margin: 0;
  line-height: inherit;
  border-radius: 0;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
  border: none;
  box-sizing: border-box;
}

button::after {
  border: none;
}

/* 去除导航点击态效果 */
.navigator-hover {
  background-color: transparent;
  opacity: 1;
}

/* 通用容器 */
.container {
  padding: 30rpx;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 主题色相关 */
.primary-color {
  color: #FF8C42;
}

.primary-bg {
  background-color: #FF8C42;
}

.primary-light-bg {
  background-color: #FFF0E6;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary {
  background-color: #FF8C42;
  color: white;
}

.btn-outline {
  border: 2rpx solid #FF8C42;
  color: #FF8C42;
}

.btn-lg {
  width: 100%;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 占位图样式 */
.placeholder {
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

/* flex布局工具类 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* 间距工具类 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-dollar:before {
  content: "\e6b5";
}

.icon-clean:before {
  content: "\e649";
}

.icon-truck:before {
  content: "\e61a";
}

.icon-recycle:before {
  content: "\e61c";
}

.icon-message:before {
  content: "\e62f";
} 